# Base image
FROM openjdk:11-jre-slim

# Install curl and Redis
RUN apt-get update && \
    apt-get install -y curl redis-server && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Set environment variables
ENV APP_HOME=/app

# Copy the jar file
COPY target/your-app.jar $APP_HOME/app.jar

# Expose the ports
EXPOSE 8080 6379

# Start Redis and the application
CMD redis-server --daemonize yes && java -jar app.jar

